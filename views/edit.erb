<form action="/contact" method ="post" accept-charset="utf-8">
  <% c = locals[:c]
     if (c) %>
       <input type="hidden" name="id" value="<%= c.id if (c) %>">
  <% end %>
  <table cols=4>
    <tr>
      <td>Last:</td>
      <td><input type="text" name="lastname" value="<%= c.lastname if (c) %>"></td>
    </tr>
    <tr>
      <td>First:</td>
      <td><input type="text" name="firstname" value="<%= c.firstname if (c) %>"></td>
    </tr>
    <tr>
      <td>Email:</td>
      <td><input type="text" name="email" value="<%= c.email if (c) %>"></td>
    </tr>
    <tr>
      <td></td>
      <td><input type="submit" value="submit"></td>
    </tr>
  </table>
</form>
